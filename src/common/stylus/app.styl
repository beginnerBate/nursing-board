@import './framework.styl'
@import './theme-day.styl'
@import './theme-night.styl'
@import './animate.styl'
.input
  padding 5px 10px
  line-height 30px
  outline none
  font-size $font-size-medium
  box-sizing border-box
  border 1px solid #d6d6d6
  border-radius 3px
.btn
  min-width: 45px
  height: 32px
  margin: 0 6px
  display: flex
  align-items: center
  justify-content center
  border-radius: 5px
  cursor pointer
  outline: none
  border:0 
.btn-info
  background: #45aee0
  color #ffffff
  border-radius: 0
  margin:0
  height 42px
  padding: 0 16px
  font-size: 18px
.btn-del
  background: #d73d32
  color #ffffff
.btn-warning
  display: inline
  padding: 4px 10px
  font-size: 13px
  letter-spacing: 3px
  color #ffffff
  background:  linear-gradient(to top, #fdd35a,#fbc322)
  border 1px solid #ffce55
.btn-risk
  font-size: 13px
  letter-spacing: 3px
  padding: 4px 10px
  display inline
  color: #ffffff
  background:  linear-gradient(to top, #e91b23, #ac1317)
  border 1px solid #d73d32
.btn-theme
  width: 60px
  height 28px
  text-align: center
  background: #2e8ded
  border-radius: 4px
  border 1px solid #4898d5
  color #ffffff
.btn-cancle
  width: 60px
  height 28px
  border-radius: 4px
  background: #f1f1f1
  border 1px solid #dedede
  color #333333
.icon_sy
  width: 30px;
  height: 34px;
  display: inline-block
