@import './framework.styl'
@import './theme-day.styl'
@import './theme-night.styl'
@import './animate.styl'
.input
  padding 5px 10px
  line-height 30px
  outline none
  font-size $font-size-medium
  box-sizing border-box
  border 1px solid #d6d6d6
  border-radius 3px
.btn
  min-width: 45px
  height: 32px
  margin: 0 6px
  display: flex
  align-items: center
  justify-content center
  border-radius: 5px
  cursor pointer
  outline: none
  border:0 
.btn-info
  background: #45aee0
  color #ffffff
  border-radius: 0
  margin:0
  height 42px
  padding: 0 16px
  font-size: 18px
.btn-del
  background: #d73d32
  color #ffffff