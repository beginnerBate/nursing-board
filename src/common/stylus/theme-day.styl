@import './var-day.styl'
.theme-day
  .n-header
    background: $color-a2
    border-bottom: 1px solid $color-a3
  .n-header-left
    color $color-a1
  .btn-danger
    color $color-a7 
    background $color-a60
  .btn-normal
    color $color-a1
    background: $color-a60
  .btn-danger:hover,.btn-normal:hover
    background: $color-a6
  .n-home-content
    background: $color-a11
  .base-box-header
    background: linear-gradient(to top,$color-a4,$color-a5)
    color $color-a1
  .base-box-wrapper
    background: $color-b11
    box-shadow: 1px 0 3px 1px $color-b2
  .memo-table
    color $color-a8
    thead,tbody
      border-bottom: 1px solid $color-c1
      tr
        th:first-child
          border-right 1px solid $color-c1
  .index-list>li>span.name
    color $color-a8 
  .index-list>li>span.level
    color $color-a9
  .n-footer
    background: $color-b11
    box-shadow: 1px 1px 10px $color-b3
    .btn
      color $color-a9
    .btn:active,.btn:focus
      box-shadow: inset 0 3px 5px $color-b21
  .n-menu
    background: $color-b11
    box-shadow: 1px 0 3px 1px $color-b2
  .n-menu>ul>li
    color: $color-a81
    border-bottom: 1px solid $color-b4
    &:hover
      background: $color-b5
  .icon_sy
    background: url('~common/icons/menu_shygl.png') no-repeat
  .pop-content header 
    background-color: $color-b6 
    color: $color-a8
    border-bottom: 1px solid $color-b7
  .pop-content header ul li
    color $color-b8
    &:hover
      color $color-a2
      span
        text-shadow: 1px 1px 5px $color-a3
  .login-list li
    background-color $color-a11
    background-image: linear-gradient(to bottom,$color-b11 0,$color-b9 100%);
    color $color-a8
    &:hover
      box-shadow: 0 1px 0 $color-b2
      opacity 0.9
  .pop-content section
    background: $color-a11
    color $color-a8
  .duty-show h1
    color $color-a9
  .duty-today .pop-content header
      background: $color-a2
      color: $color-a1
  .duty-select-item>.input
    color $color-a8
    background-color $color-c2
    border 1px solid $color-c1     
  .duty-select-list>ul>li>span
    border 1px solid $color-a81
    box-shadow: 1px 0 3px 1px $color-b2
    color $color-a8
    background-color $color-c2
    border 1px solid $color-c1
    &:hover
      background-color $color-c3
      border 1px solid $color-c4 


      