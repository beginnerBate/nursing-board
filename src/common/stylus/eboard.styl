.board
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-color #ffffff
.board canvas
  position fixed
  top 0
  left 0
  width 100%
  height 100%
.board>.board-menu
  position fixed
  top 0 
  bottom 0
  left 0
  width 60px
  background-color #fafafa
  box-shadow 1px 1px 5px #d4d4d4
  z-index: 2
.choose-color
  border 1px solid #d4d4d4
  border-top 0
  border-right 0
  text-align: center
  padding: 6px 0
.choose-size
  // margin 20px 0
  border 1px solid #d4d4d4
  border-top 0
  border-right 0
  text-align: center
  padding: 16px 0
  cursor: default
  margin-bottom: 12px
.choose-shape,.choose-operate
  display: flex
  padding: 0px 6px
  flex-direction: column
.choose-shape>span,.choose-operate>span
    flex: 1
    height 100%
    display inline-block
    border 1px solid #d4d4d4
    border-radius: 3px
    margin: 0 2px
    text-align: center
    line-height: 36px
    color: #fff
    background: #909399
    cursor pointer
.choose-shape>span:hover,.choose-operate>span:hover
    background: #6ab0f9
.choose-index 
  border-top 1px solid #d4d4d4
  margin-top 15px
  padding-top 15px
  .btn
    width: 40px
.choose-load,.choose-new
  height 36px
  overflow hidden
  padding:0 6px
  display flex
.choose-load>span,.choose-new>span
  color: #ffffff
  border-radius: 4px
  display block
  margin-right: 5px
  display: flex 
  align-items: center
  border 1px solid #d4d4d4
.choose-load>span>i,.choose-new>span>i
  display: inline-block
  width: 36px
  height 36px
  background: rgba(0,0,0,0.05)
  margin-right: 6px
  text-align: center
  line-height: 36px
  border-top-left-radius: 5px
  border-bottom-left-radius: 5px
.choose-load>span:first-child
  background-color: #04a400 
  width 90px
.choose-load>span:last-child
  background-color: #5db2ff
  width 120px
.img-show
  margin: 15px 6px
  border: 1px solid 
  border-color: #dcdcdc
  // width: 100%
  height: 120px
.choose-new>span:first-child
  color #333
  background-color: #fafafa 
  width 90px
.choose-new>span:last-child
  color #333
  background-color: #fafafa
  width 120px
.choose-active
  background  #409eff !important